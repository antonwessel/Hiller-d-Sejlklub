@page
@model HillerødSejlklub.Pages.Boats.Maintenance.DeleteMaintenanceModel
@{
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="text-danger fw-bold">Bekræft Sletning</h1>
    </div>

    <div class="alert alert-danger mt-4 p-4">
        <p class="mb-3 fs-5">
            Er du sikker på, at du vil slette vedligeholdelse med beskrivelsen
            <em>"@Model.Maintenance.Description"</em> på
            <strong>@Model.Boat.BoatName</strong>?
        </p>

        <form method="post" class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger btn-lg me-3">
                <i class="bi bi-check-circle"></i> Ja
            </button>
            <a class="btn btn-secondary btn-lg" asp-page="MaintenanceBoat" asp-route-Name="@Model.Boat.BoatName">
                <i class="bi bi-x-circle"></i> Nej
            </a>
        </form>
    </div>
</div>
