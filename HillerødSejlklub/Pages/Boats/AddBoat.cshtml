@page
@model HillerødSejlklub.Pages.Boats.AddBoatModel
@{
}

<div class="container mt-5">
    <h1 class="mb-4">Tilføj Båd</h1>
    <form method="post">
        <div class="mb-3">
            <label asp-for="@Model.Boat.BoatName" class="form-label"></label>
            <input asp-for="@Model.Boat.BoatName" class="form-control" />
            <span asp-validation-for="@Model.Boat.BoatName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Boat.BoatType" class="form-label"></label>
            <input asp-for="@Model.Boat.BoatType" class="form-control" />
            <span asp-validation-for="@Model.Boat.BoatType" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Boat.BoatModel" class="form-label"></label>
            <input asp-for="@Model.Boat.BoatModel" class="form-control" />
            <span asp-validation-for="@Model.Boat.BoatModel" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Boat.ImageURL" class="form-label"></label>
            <input asp-for="@Model.Boat.ImageURL" class="form-control" />
            <span asp-validation-for="@Model.Boat.ImageURL" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Opret
        </button>
    </form>
</div>