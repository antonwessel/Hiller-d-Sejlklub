@page
@model HillerødSejlklub.Pages.Blog.AlleBlogsModel
@{
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Vores Blogs</h1>
    <a class="btn btn-success btn-lg mb-4" asp-page="TilFøjBlog">
        <i class="bi bi-plus-circle"></i> Tilføj en ny blog
    </a>
    <div class="row justify-content-center">
        @foreach (var blog in Model.Blogs)
        {
            <div class="col-12 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@blog.BlogTitel</h5>
                        <p class="text-muted mb-2">
                            <strong>Forfatter:</strong> @blog.BlogForfatter<br />
                            <strong>Dato:</strong> @blog.BlogDato
                        </p>
                        <p class="card-text">
                            @blog.BlogIndhold
                        </p>
                        
                        <a class="btn btn-outline-danger btn-sm" asp-page="SletBlog" asp-route-BlogTitel="@blog.BlogTitel" title="Slet">
                            <i class="bi bi-trash"></i> Slet
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
