@page
@model HillerødSejlklub.Pages.Blog.TilføjBlogModel
@{
}
<div class="container mt-5">
    <h1 class="mb-4">Tilføj Blog</h1>
    <form method="post">
        <div class="mb-3">
            <label asp-for="@Model.Blog.BlogTitel" class="form-label"></label>
            <input asp-for="@Model.Blog.BlogTitel" class="form-control" />
            <span asp-validation-for="@Model.Blog.BlogTitel" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Blog.BlogForfatter" class="form-label"></label>
            <input asp-for="@Model.Blog.BlogForfatter" class="form-control" />
            <span asp-validation-for="@Model.Blog.BlogForfatter" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Blog.BlogDato" class="form-label"></label>
            <input asp-for="@Model.Blog.BlogDato" class="form-control" />
            <span asp-validation-for="@Model.Blog.BlogDato" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Blog.BlogIndhold" class="form-label"></label>
            <input asp-for="@Model.Blog.BlogIndhold" class="form-control" />
            <span asp-validation-for="@Model.Blog.BlogIndhold" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Opret
        </button>
    </form>
</div>