@page
@model HillerødSejlklub.Pages.Blog.RedigerBlogModel
@{
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Rediger Blog</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Blog.BlogTitel" class="form-label"></label>
                    <input asp-for="Blog.BlogTitel"
                           class="form-control bg-light text-secondary border-0"
                           readonly="readonly" />
                    <small class="form-text text-muted">Dette felt kan ikke redigeres.</small>
                </div>
                <div class="mb-3">
                    <label asp-for="Blog.BlogForfatter" class="form-label"></label>
                    <input asp-for="Blog.BlogForfatter" class="form-control" />
                    <span asp-validation-for="Blog.BlogForfatter" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Blog.BlogIndhold" class="form-label"></label>
                    <input asp-for="Blog.BlogIndhold" class="form-control" />
                    <span asp-validation-for="Blog.BlogIndhold" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary">Opdater</button>
                    <a asp-page="AlleBlogs" class="btn btn-link">Tilbage til blogs</a>
                </div>
            </form>
        </div>
    </div>
</div>
