@page
@using ClassLibrary.Helpers
@model HillerødSejlklub.Pages.Begivenhed.Participation.ParticipationListModel
@{
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Deltagere</h2>
    @if (Model.Participants.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>Navn</th>
                    <th>Telefonnummer</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var participant in Model.Participants)
                {
                    <tr>
                        <td>@participant.Navn</td>
                        <td>@participant.TelefonNummer</td>
                        <td>@participant.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            Ingen deltagere fundet for denne begivenhed.
        </div>
    }

    @if (AdminState.IsAdminLoggedIn)
    {
        <div class="container mt-5">
            <h1 class="mb-4">Tilføj deltager til begivenhed</h1>
            <form method="post" asp-page-handler="OnPost" asp-route-eventId="@Model.CurrentEvent.Id">
                <div class="mb-3">
                    <label asp-for="NewParticipantId" class="form-label">Vælg deltager</label>
                    <select asp-for="NewParticipantId" class="form-select">
                        <option value="" disabled selected>Vælg en deltager</option>
                        @foreach (var participant in Model.AllAvailableParticipants)
                        {
                            <option value="@participant.Id">@participant.Navn</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Tilføj
                </button>
            </form>
        </div>
    }
</div>
