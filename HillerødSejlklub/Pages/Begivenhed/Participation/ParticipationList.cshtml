@page
@model HillerødSejlklub.Pages.Begivenhed.Participation.ParticipationListModel
@{
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Deltagere</h2>
    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th>Navn</th>
                <th>Telefonnummer</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var participant in Model.Participants)
            {
                <tr>
                    <td>@participant.Navn</td>
                    <td>@participant.TelefonNummer</td>
                    <td>@participant.Email</td>
                </tr>
            }
        </tbody>
    </table>
</div>
