@page
@model AddMemberModel
@{
}

<div class="container mt-5">
    <h1 class="mb-4">Tilføj Medlem</h1>
    <form method="post">
        <div class="mb-3">
            <label asp-for="@Model.Member.Email" class="form-label"></label>
            <input asp-for="@Model.Member.Email" class="form-control" />
            <span asp-validation-for="@Model.Member.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Member.Name" class="form-label"></label>
            <input asp-for="@Model.Member.Name" class="form-control" />
            <span asp-validation-for="@Model.Member.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Member.PhoneNumber" class="form-label"></label>
            <input asp-for="@Model.Member.PhoneNumber" class="form-control" />
            <span asp-validation-for="@Model.Member.PhoneNumber" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Opret
        </button>
    </form>
</div>
