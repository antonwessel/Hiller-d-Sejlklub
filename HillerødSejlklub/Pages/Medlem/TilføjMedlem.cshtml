@page
@model HillerødSejlklub.Pages.Medlem.TilføjMedlemModel
@{
}

<div class="container mt-5">
    <h1 class="mb-4">Tilføj Medlem</h1>
    <form method="post">
        <div class="mb-3">
            <label asp-for="@Model.Medlem.Email" class="form-label"></label>
            <input asp-for="@Model.Medlem.Email" class="form-control" />
            <span asp-validation-for="@Model.Medlem.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Medlem.Navn" class="form-label"></label>
            <input asp-for="@Model.Medlem.Navn" class="form-control" />
            <span asp-validation-for="@Model.Medlem.Navn" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Medlem.TelefonNummer" class="form-label"></label>
            <input asp-for="@Model.Medlem.TelefonNummer" class="form-control" />
            <span asp-validation-for="@Model.Medlem.TelefonNummer" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Opret
        </button>
    </form>
</div>
