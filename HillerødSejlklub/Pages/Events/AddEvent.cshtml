@page
@model HillerødSejlklub.Pages.Events.AddEventModel
@{
}

<form method="post">
    <div class="mb-3">
        <label asp-for="@Model.Event.Name" class="form-label">Navn</label>
        <input asp-for="@Model.Event.Name" class="form-control" />
        <span asp-validation-for="@Model.Event.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Event.Date" class="form-label">Dato og Tid</label>
        <input asp-for="@Model.Event.Date" class="form-control" type="datetime-local" />
        <span asp-validation-for="@Model.Event.Date" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Event.Location" class="form-label">Lokation</label>
        <input asp-for="@Model.Event.Location" class="form-control" />
        <span asp-validation-for="@Model.Event.Location" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Opret</button>
</form>
