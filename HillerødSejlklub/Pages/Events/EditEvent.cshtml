@page
@model HillerødSejlklub.Pages.Events.EditEventModel
@{
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Rediger Begivenhed</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Event.Name" class="form-label"></label>
                    <input asp-for="Event.Name"
                           class="form-control bg-light text-secondary border-0"
                           readonly="readonly" />
                    <small class="form-text text-muted">Dette felt kan ikke redigeres.</small>
                </div>
                <div class="mb-3">
                    <label asp-for="Event.Date" class="form-label">Dato og Tid</label>
                    <input asp-for="Event.Date" class="form-control" type="datetime-local" />
                    <span asp-validation-for="Event.Date" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Event.Location" class="form-label">Lokation</label>
                    <input asp-for="Event.Location" class="form-control" />
                    <span asp-validation-for="Event.Location" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Gem ændringer</button>
            </form>
        </div>
    </div>
</div>
