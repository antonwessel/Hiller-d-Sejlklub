@page
@model HillerødSejlklub.Pages.Både.Booking.AllBookingsModel
@{
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Alle Bookinger for @Model.CurrentBoatName</h1>

    @if (!Model.Bookings.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            <strong>Der er ingen bookinger!</strong>
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Booking ID</th>
                    <th>Booking Dato</th>
                    <th>Medlemsnavn</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model.Bookings)
                {
                    <tr>
                        <td>@booking.Id</td>
                        <td>@booking.DateBooked.ToString("dd-MM-yyyy HH:mm")</td>
                        <td>@booking.MedlemToBook.Navn</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
