@page
@using ClassLibrary.Core.Helpers
@model HillerødSejlklub.Pages.Både.AlleBådeModel
@{
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Vores Både</h1>
    @if (AdminState.IsAdminLoggedIn)
    {
        <a class="btn btn-success btn-lg mb-4" asp-page="TilFøjBåd">
            <i class="bi bi-plus-circle"></i> Tilføj en ny båd
        </a>
    }
    <div class="row">
        @foreach (var båd in Model.Både)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0">
                    <img src="@båd.ImageURL" class="card-img-top rounded-top" alt="@båBoatNamevn" style="height: 200px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary">@båBoatNamevn</h5>
                        <p class="text-muted mb-4">
                            <strong>Bådtype:</strong> @båd.BådType<br />
                            <strong>Model:</strong> @båd.BådModel
                        </p>
                        @if (AdminState.IsAdminLoggedIn)
                        {
                            <a class="btn btn-outline-primary btn-sm me-3 mb-2" asp-page="RedigerBåd" asp-route-navn="@båd.BoatName" title="Rediger">
                                <i class="bi bi-pencil"></i> Rediger
                            </a>
                            <a class="btn btn-outline-danger btn-sm me-3 mb-2" asp-page="SletBåd" asp-route-navn="@båd.BoatName" title="Slet">
                                <i class="bi bi-trash"></i> Slet
                            </a>
                        }
                        <a class="btn btn-outline-primary btn-sm me-3 mb-2" asp-page="Maintenance/MaintenanceBoat" asp-route-navn="@båd.BoatName" title="Maintenance">
                            <i class="bi bi-wrench"></i> Vedligeholdelse
                        </a>
                        <a class="btn btn-outline-primary btn-sm me-3 mb-2" asp-page="Booking/AllBookings" asp-route-bådNavn="@båd.BoatName" title="Booking">
                            <i class="bi bi-calendar-check"></i> Booking
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
