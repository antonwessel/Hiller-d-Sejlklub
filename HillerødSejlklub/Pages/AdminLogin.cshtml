@page
@using ClassLibrary.Helpers
@model HillerødSejlklub.Pages.AdminLoginModel
@{
    ViewData["Title"] = "Admin Login";
}

@if (!AdminState.IsAdminLoggedIn)
{
    <form method="post">
        <div class="mb-3">
            <label asp-for="UsernameInput" class="form-label">Brugernavn</label>
            <input asp-for="UsernameInput" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PasswordInput" class="form-label">Adgangskode</label>
            <input asp-for="PasswordInput" type="password" class="form-control" />
        </div>

        <!-- hvis login fejler -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-danger">@Model.ErrorMessage</div>
        }

        <button type="submit" class="btn btn-primary">Log ind</button>
    </form>
}
else
{
    <p>Velkommen, Admin! Du er logget ind.</p>
    <form method="post" asp-page-handler="Logout">
        <button type="submit" class="btn btn-secondary">Log ud</button>
    </form>
}
